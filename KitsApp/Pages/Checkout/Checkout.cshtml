@page
@model KitsApp.Pages.Checkout.CheckoutModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Order Summary</h2>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <img src="~/images/Kits/@(Model.ImageTitle + ".png")" class="img-fluid rounded mb-3" alt="@Model.KitName Kit" asp-append-version="true" />
                    </div>
                    <h4 class="text-center">@Model.KitName</h4>
                    <p class="text-muted text-center">Kit Number: <strong>@Model.KitNumber</strong></p>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Total Price:</span>
                        <span class="text-success fw-bold">$@Model.KitPrice</span>
                    </div>
                    <div class="mt-4">
                        <a class="btn btn-success w-100 py-2" href="/Checkout/ThankYou" role="button">Confirm Order</a>

                    </div>
                </div>
            </div>
            <div class="mt-3 text-center">
                <a href="/Kit" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>
