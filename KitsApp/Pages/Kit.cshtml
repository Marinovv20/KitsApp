@page
@model KitsApp.Pages.KitModel
@{
    ViewData["Title"] = "Kits";
}

<div class="hero-section text-center py-5" style="background: url('@Url.Content("~/images/stadium.png")') no-repeat center center; background-size: cover;">
    <div class="overlay">
        <h1 class="display-4 text-white">Our Great Selections of Football Kits</h1>
        <h4 class="text-white">Find Your Perfect Kit or Build Your Own!</h4>
        <p class="small-text text-white"><i>Only one kit per order!</i></p>
        <a href="#kitsSection" class="btn btn-warning btn-lg">Shop Kits</a>
    </div>
</div>

<div class="container" id="kitsSection">
    <div class="text-center mb-5">
        <h2 class="text-capitalize text-dark mt-5">Football Kits Collection</h2>
        <p class="lead text-muted">Explore our collection and create your own!</p>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-12 col-md-10 col-lg-8 mb-4">
            <div class="card shadow-lg border-0 make-your-own-kit-card">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="~/images/Kits/Custom.png" class="w-100 rounded" alt="Create your own Kit">
                    </div>
                    <div class="col-md-6">
                        <h3 class="text-uppercase">Create Your Own Kit</h3>
                        <p>Design a custom football kit with our easy-to-use KitMaker!</p>
                        <a href="/Forms/CustomKit" class="btn btn-success btn-lg">Try Now!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var kit in Model.fakeKitDb)
        {
            var imagePath = Url.Content("~/images/Kits/" + kit.ImageTitle + ".png");

            <div class="col-md-4">
                <div class="card kit-card h-100 shadow-lg border-0">
                    <a class="kit-img text-decoration-none" asp-area=""
                       asp-page="Checkout/Checkout"
                       asp-route-KitName="@kit.KitName"
                       asp-route-KitNumber="@kit.KitNumber"
                       asp-route-ImageTitle="@kit.ImageTitle"
                       asp-route-KitPrice="@kit.FinalPrice">

                        <img src="@imagePath" class="card-img-top img-fluid kit-image" alt="@kit.KitName">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title text-dark text-uppercase">@kit.KitName</h5>
                        <p class="card-text text-muted">@kit.FinalPrice.ToString("C")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

