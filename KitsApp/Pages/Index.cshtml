@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" style="background: linear-gradient(to bottom, #0288d1, #26c6da); color: white; padding: 40px;">
    <div class="jumbotron text-center py-5" style="background: rgba(0, 0, 0, 0.5); border-radius: 15px;">
        <h1 class="display-4" style="font-family: 'Trebuchet MS', sans-serif; font-weight: bold;">Welcome to Va1s Kits!</h1>
        <p class="lead" style="font-size: 1.5rem;">Your one-stop shop for premium football kits and accessories.</p>
        <a class="btn btn-success btn-lg" href="~/Kit" role="button" style="font-size: 1.25rem; padding: 10px 20px;">Explore Kits</a>
    </div>
    <img class="mainImage mt-4" src="~/images/homepage.png" alt="Football Kits" style="width: 80%; border: 5px solid white; border-radius: 10px;" />
</div>

<!-- Team Selection Menu -->
<div class="container text-center my-5">
    <h2 class="mb-4" style="font-family: 'Trebuchet MS', sans-serif;">Shop Your Favourite League</h2>
    <div class="d-flex justify-content-center flex-wrap">
        <div class="p-2">
            <a href="~/League/PremierLeague" class="text-decoration-none">
                <img src="~/images/PremierLeague.png" alt="Premier League"
                     style="width: 120px; height: 100px; object-fit: contain; border: 2px solid #ddd; background-color: white; border-radius: 8px;" />
                <p class="mt-2">Premier League</p>
            </a>
        </div>
        <div class="p-2">
            <a href="~/League/EFL" class="text-decoration-none">
                <img src="~/images/EFL.png" alt="EFL"
                     style="width: 120px; height: 100px; object-fit: contain; border: 2px solid #ddd; background-color: white; border-radius: 8px;" />
                <p class="mt-2">EFL</p>
            </a>
        </div>
        <div class="p-2">
            <a href="~/League/LALIGA" class="text-decoration-none">
                <img src="~/images/LaLiga.png" alt="La Liga"
                     style="width: 120px; height: 100px; object-fit: contain; border: 2px solid #ddd; background-color: white; border-radius: 8px;" />
                <p class="mt-2">LALIGA</p>
            </a>
        </div>
        <div class="p-2">
            <a href="~/League/Bundesliga" class="text-decoration-none">
                <img src="~/images/Bundesliga.png" alt="Bundesliga"
                     style="width: 120px; height: 100px; object-fit: contain; border: 2px solid #ddd; background-color: white; border-radius: 8px;" />
                <p class="mt-2">Bundesliga</p>
            </a>
        </div>
        <div class="p-2">
            <a href="~/League/Ligue1" class="text-decoration-none">
                <img src="~/images/Ligue1.png" alt="Ligue 1"
                     style="width: 120px; height: 100px; object-fit: contain; border: 2px solid #ddd; background-color: white; border-radius: 8px;" />
                <p class="mt-2">Ligue 1</p>
            </a>
        </div>
        <div class="p-2">
            <a href="~/League/SerieA" class="text-decoration-none">
                <img src="~/images/SerieA.png" alt="Serie A"
                     style="width: 120px; height: 100px; object-fit: contain; border: 2px solid #ddd; background-color: white; border-radius: 8px;" />
                <p class="mt-2">Serie A</p>
            </a>
        </div>
    </div>
</div>

<!-- Featured Football Kits Section -->
<div class="container my-5">
    <h2 class="text-center mb-4" style="font-family: 'Trebuchet MS', sans-serif;">Featured Football Kits</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/Kits/ManUtd.png" class="card-img-top" alt="Home Kit">
                <div class="card-body text-center">
                    <h5 class="card-title">Home Kit</h5>
                    <p class="card-text">Show your team spirit with our premium home kits.</p>
                    <a href="~/Kit" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/Kits/away.png" class="card-img-top" alt="Away Kit">
                <div class="card-body text-center">
                    <h5 class="card-title">Away Kit</h5>
                    <p class="card-text">Stand out with our stylish away kits.</p>
                    <a href="~/Kit" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/goalkeeper.png" class="card-img-top" alt="Goalkeeper Kit">
                <div class="card-body text-center">
                    <h5 class="card-title">Goalkeeper Kit</h5>
                    <p class="card-text">Command the field in our goalkeeper kits.</p>
                    <a href="~/Kit" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center py-5" style="background: #ffc107; color: black;">
    <h2>Ready to Gear Up?</h2>
    <a class="btn btn-dark btn-lg" href="~/Kit" role="button">Shop Kits Now</a>
</div>
