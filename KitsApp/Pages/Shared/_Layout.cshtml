<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KitsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KitsApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: #e0e0e0; border-bottom: 1px solid #d6d6d6; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index" style="color: #444;">
                    <img src="~/images/Logo.png" alt="Va1s Kits" width="40" height="40" class="me-2">
                    <span style="font-size: 1.25rem; font-weight: bold;">Vals Kits</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="btn btn-outline-dark me-2" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-dark me-2" asp-area="" asp-page="/Kit">Kits</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-dark me-2" asp-area="" asp-page="/Orders">Orders</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @{
                            var username = Context.Session.GetString("Username");
                        }
                        @if (username != null)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3" style="color: #444;">Welcome, @username</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger me-2" asp-area="" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-dark me-2" asp-area="" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-dark" asp-area="" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top myFooter text-muted text-center" style="height: 10px; line-height: 20px; padding: 5px 0; background-color: #f8f9fa; font-size: 14px;">
        <div class="container">
            <p>© 2024 KitsApp. All rights reserved.</p>
            <p><a href="/privacy">Privacy Policy</a> | <a href="/terms">Terms of Service</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



